# Copy this to .env and fill in your values

# Azure Configuration
AZURE_ENV_NAME=luxylyfe-prod
AZURE_LOCATION=eastus
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_PRINCIPAL_ID=your-principal-id

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-at-least-32-characters-long
NEXTAUTH_SECRET=your-nextauth-secret-different-from-jwt

# Database Configuration
DATABASE_MODE=cosmos_primary
COSMOS_ACCOUNT_NAME=your-existing-cosmos-account-name
COSMOS_DATABASE_NAME=luxylyfe

# Cosmos DB Connection (will be auto-populated during deployment)
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-primary-key
COSMOS_DB_DATABASE_NAME=luxylyfe

# NextAuth URL (will be set during deployment)
NEXTAUTH_URL=https://your-app-name.azurewebsites.net